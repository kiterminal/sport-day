<%= form_with(model: team, local: true, html: {autocomplete: 'off'}) do |form| %>
  <% if team.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>มาลุ้นกันว่าคุณจะได้กลุ่มไหน แต่ก่อนอื่นรบกวนกรอกข้อมูลก่อนนะ</p>

  <div class="form-group">
    <%= form.label(:first_name, 'ชื่อ') %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label(:last_name, 'นามสกุล') %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label(:code, 'เลขบัตรพนักงาน') %>
    <%= form.text_field :code, class: 'form-control' %>
  </div>

  <%= form.submit 'ลุ้นเลย', class: 'btn btn-primary', style: 'width:100%' %>
<% end %>
